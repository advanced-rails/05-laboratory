<h1>Number Histogram</h1>

<form method='post' action='/math/dups'>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type='text' name='numbers' />
    <input type='submit' name='Go!' />
</form>

<% if @counter %>
    <ul>
        <% @counter.keys.sort.each do |k| %>
            <li><%= k %> => <%= @counter[k] %></li>
        <% end %>
    </ul>
<% end %>
